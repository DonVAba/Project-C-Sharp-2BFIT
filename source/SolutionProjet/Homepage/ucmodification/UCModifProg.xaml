<UserControl x:Class="Homepage.ucmodification.UCModifProg"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Homepage.ucmodification"
             mc:Ignorable="d" 
             MinHeight="350" MinWidth="430" MaxHeight="350" MaxWidth="430">
    <StackPanel>
        <TextBlock  Margin="15,15,0,0" FontSize="20" Foreground="White" Text="Programme"></TextBlock>
        <TextBox  Margin="10" Height="43" Width="398" x:Name="newName"/>
        <TextBlock Margin="15,15,0,0" FontSize="20" Foreground="White" Text="Description"></TextBlock>
        <TextBox  Margin="10" Height="58" Width="395" x:Name="newDesc"/>
        <WrapPanel Margin="20,40,0,0">
            <Button Width="125" Click="CancelButton_Click" FontSize="15" Margin="15,0,0,0" Style="{StaticResource BoutonProg}">ANNULER</Button>
            <Button x:Name="saveButton" Click="saveButton_Click" Margin="100,0,15,0"  Width="125" FontSize="15" Style="{StaticResource BoutonProg}">SAUVEGARDER</Button>
        </WrapPanel>
    </StackPanel>
</UserControl>
